	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\CadRevealComposer\CadRevealComposer.csproj" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="CommandLineParser" Version="2.8.0" />
	</ItemGroup>

</Project>
